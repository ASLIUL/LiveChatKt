<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/limit_size_5dp"
        >
        
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/gift_img"
            android:layout_width="@dimen/limit_size_50dp"
            android:layout_height="@dimen/limit_size_60dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/gift_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gift_img"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:text="@string/sure"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="@dimen/limit_size_2dp"
            android:textSize="@dimen/font_size_9sp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/gift_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gift_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:text="@string/sure"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="@dimen/limit_size_2dp"
            android:textSize="@dimen/font_size_9sp"
            tools:ignore="MissingConstraints" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>