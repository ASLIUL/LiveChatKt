<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <com.yb.livechatkt.view.NiceImageView
        android:id="@+id/header"
        android:layout_width="@dimen/limit_size_45dp"
        android:layout_height="@dimen/limit_size_45dp"
        app:corner_radius="@dimen/limit_size_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="0"
        android:textSize="@dimen/font_size_18sp"
        android:textColor="@color/session_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/header"
        app:layout_constraintTop_toTopOf="@id/header"
        tools:ignore="MissingConstraints"
        tools:text="@string/contacts" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/session_msg_tv"
        android:textSize="@dimen/font_size_12sp"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/header"
        app:layout_constraintTop_toTopOf="@id/header"
        tools:ignore="MissingConstraints"
        tools:text="@string/contacts" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@id/header"
        tools:ignore="MissingConstraints"
        tools:text="@string/contacts" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/limit_size_05dp"
        android:layout_marginTop="@dimen/limit_size_10dp"
        app:layout_constraintVertical_bias="0"
        android:background="@color/view_dividing_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>