<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/limit_size_5dp"
        android:background="@drawable/gift_anim_bg">

        <com.yb.livechatkt.view.NiceImageView
            android:id="@+id/crvheadimage"
            android:layout_width="@dimen/limit_size_30dp"
            android:layout_height="@dimen/limit_size_30dp"
            android:layout_centerVertical="true"
            app:is_circle="true"
            app:border_color="@color/white"
            android:layout_marginStart="@dimen/limit_size_15dp"
            app:border_width="1dp" />

        <LinearLayout
            android:id="@+id/ll_Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/crvheadimage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Johnny"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对主播打赏XXX"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivgift"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/ll_Content" />

        <TextView
            android:id="@+id/giftNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/ivgift"
            android:text="x1"
            android:textColor="#ffde00"
            android:textSize="20sp" />
    </RelativeLayout>
</layout>